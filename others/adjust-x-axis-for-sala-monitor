#!/bin/bash
if [ -z "$1" ]; then 
    dx=90
else 
    dx=$1
fi

#Modeline "1360x768_60.00"   84.75  1360 1432 1568 1776  768 771 781 798 -hsync +vsync
xrandr --newmode "1360x768_60.00_$dx" 84.75 1360 $(( 1432 + $dx )) $(( 1568 + $dx )) 1776  768 771 781 798 -HSync +VSync
xrandr --addmode VGA1 "1360x768_60.00_$dx"

sleep 1

xrandr --output VGA1 --mode "1360x768_60.00_$dx"
